<div class="register_form">
  <h2>Borrower</h2>


<form action="/register" method="post" role="form">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <p>
    <label for="first_name">First Name:</label>
    <input type="name" class="form-control" name="user[first_name]" placeholder="Enter first name" >
  </p>

   <p>
    <label for="last_name">Last Name:</label>
    <input type="name" class="form-control" name="user[last_name]" placeholder="Enter last name" >
  </p>

   <p>
    <label for="email">Email:</label>
    <input type="email" class="form-control" name="user[email]" placeholder="Enter email" >
  </p>
  <p>
    <label for="password">Password:</label>
    <input type="password" class="form-control" name="user[password]" placeholder="Enter password"  minlength="8">
  </p>
  <p>
    <label for="password_confirmation">Password Confirmation:</label>
    <input type="password" class="form-control" name="user[password_confirmation]" placeholder="Enter password confirmation"  minlength="8">
  </p>
  <p>
    <label for="borrow_reason">Need Money For:</label>
    <input type="text" class="form-control" name="user[borrow_reason]"  placeholder="Enter reason">
  </p>
  <p>
    <label for="borrow_description">Description:</label>
    <input type="text" class="form-control" name="user[borrow_description]"  placeholder="Enter a full description">
  </p>
   <p>
    <label for="money">Amount Needed:</label>
    <input type="number" class="form-control" name="user[money]" min="0"  step="0.01">
  </p>
  <input name="user[account_type]" value="2" type="hidden">
  <button type="submit" class="btn btn-default">Register</button>

</form>


</div>
